// C++ <clocale> header for ViperOS
// C++ wrapper for <locale.h>

#ifndef _VIPER_CXX_CLOCALE
#define _VIPER_CXX_CLOCALE

#include "../locale.h"

namespace std
{

using ::lconv;
using ::localeconv;
using ::setlocale;

} // namespace std

// Bring constants into scope
using ::LC_ALL;
using ::LC_COLLATE;
using ::LC_CTYPE;
using ::LC_MESSAGES;
using ::LC_MONETARY;
using ::LC_NUMERIC;
using ::LC_TIME;

#endif // _VIPER_CXX_CLOCALE
