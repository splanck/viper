module TestMatchSimple;

// Test: Simple match statement

func start() {
    Viper.Terminal.Say("=== Simple Match Test ===");

    var x: Integer = 2;
    var result: Integer = 0;

    match x {
        0 => { result = 10; }
        1 => { result = 20; }
        2 => { result = 30; }
        _ => { result = 99; }
    }

    Viper.Terminal.Say("Result: " + Viper.Strings.FromInt(result));

    if (result == 30) {
        Viper.Terminal.Say("RESULT: ok");
    } else {
        Viper.Terminal.Say("RESULT: fail");
    }
}
