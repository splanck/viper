module TestBitsDebug;

func start() {
    Viper.Terminal.Say("Testing Bits.Not and Bits.Flip:");

    var not0: Integer = Viper.Bits.Not(0);
    Viper.Terminal.Say("Bits.Not(0) = " + Viper.Strings.FromInt(not0));

    var flip0: Integer = Viper.Bits.Flip(0);
    Viper.Terminal.Say("Bits.Flip(0) = " + Viper.Strings.FromInt(flip0));

    var langNot0: Integer = ~0;
    Viper.Terminal.Say("~0 = " + Viper.Strings.FromInt(langNot0));

    var not1: Integer = Viper.Bits.Not(1);
    Viper.Terminal.Say("Bits.Not(1) = " + Viper.Strings.FromInt(not1));

    var flip1: Integer = Viper.Bits.Flip(1);
    Viper.Terminal.Say("Bits.Flip(1) = " + Viper.Strings.FromInt(flip1));
}
