module TestChainedAssign;

// Test: Chained assignment

func start() {
    Viper.Terminal.Say("=== Chained Assignment Test ===");

    var a: Integer = 0;
    var b: Integer = 0;
    var c: Integer = 0;
    a = b = c = 42;

    Viper.Terminal.Say("a = " + Viper.Strings.FromInt(a));
    Viper.Terminal.Say("b = " + Viper.Strings.FromInt(b));
    Viper.Terminal.Say("c = " + Viper.Strings.FromInt(c));

    if (a == 42 && b == 42 && c == 42) {
        Viper.Terminal.Say("RESULT: ok");
    } else {
        Viper.Terminal.Say("RESULT: fail");
    }
}
