module TestMatchBinding;

// Test: Match with binding

func start() {
    Viper.Terminal.Say("=== Match Binding Test ===");

    var x: Integer = 42;
    var result: Integer = 0;

    match x {
        0 => { result = 0; }
        n => { result = n + 1; }
    }

    Viper.Terminal.Say("Result: " + Viper.Strings.FromInt(result));

    if (result == 43) {
        Viper.Terminal.Say("RESULT: ok");
    } else {
        Viper.Terminal.Say("RESULT: fail");
    }
}
