#ifndef _LIBCPP_CSTDLIB
#define _LIBCPP_CSTDLIB

#include "../stdlib.h"

namespace std {

/* Memory allocation */
using ::calloc;
using ::free;
using ::malloc;
using ::realloc;

/* Environment and exit */
using ::abort;
using ::atexit;
using ::exit;
using ::getenv;

/* String to number conversions */
using ::atof;
using ::atoi;
using ::atol;
using ::atoll;
using ::strtod;
using ::strtof;
using ::strtol;
using ::strtold;
using ::strtoll;
using ::strtoul;
using ::strtoull;

/* Number to string conversions */
using ::itoa;
using ::ltoa;
using ::ultoa;

/* Random numbers */
using ::rand;
using ::srand;

/* Integer arithmetic */
using ::abs;
using ::div;
using ::labs;
using ::ldiv;
using ::llabs;
using ::lldiv;

/* Searching and sorting */
using ::bsearch;
using ::qsort;

/* Types */
using ::div_t;
using ::ldiv_t;
using ::lldiv_t;
using ::size_t;

} /* namespace std */

/* Additional C++ overloads */
namespace std {

inline long abs(long n) {
    return labs(n);
}

inline long long abs(long long n) {
    return llabs(n);
}

inline ldiv_t div(long n, long d) {
    return ldiv(n, d);
}

inline lldiv_t div(long long n, long long d) {
    return lldiv(n, d);
}

} /* namespace std */

#endif /* _LIBCPP_CSTDLIB */
