{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default (Monolithic Kernel)",
      "description": "Monolithic kernel build with all kernel services enabled",
      "binaryDir": "${sourceDir}/build",
      "toolchainFile": "${sourceDir}/cmake/aarch64-clang-toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "VIPER_KERNEL_ENABLE_FS": "ON",
        "VIPER_KERNEL_ENABLE_NET": "ON",
        "VIPER_KERNEL_ENABLE_TLS": "OFF"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug Build",
      "description": "Debug build with verbose logging",
      "binaryDir": "${sourceDir}/build-debug",
      "toolchainFile": "${sourceDir}/cmake/aarch64-clang-toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "VIPER_KERNEL_ENABLE_FS": "ON",
        "VIPER_KERNEL_ENABLE_NET": "ON",
        "VIPER_KERNEL_ENABLE_TLS": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
