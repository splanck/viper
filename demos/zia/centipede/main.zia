// =============================================================================
// CENTIPEDE - Main Entry Point (Graphical Version)
// =============================================================================
// A comprehensive Centipede clone demonstrating Zia/Viper capabilities
// using Viper.Graphics.Canvas for pixel-based rendering
// =============================================================================
//
// CONTROLS:
//   Arrow Keys / WASD - Move player
//   SPACE             - Fire
//   ENTER             - Confirm / Start
//   ESC               - Quit
//   P                 - Pause
//   R                 - Restart (after game over)
//
// =============================================================================

module Centipede;

bind "./config";
bind "./utils";
bind "./game";

func start() {
    Viper.Terminal.Say("===========================================");
    Viper.Terminal.Say("CENTIPEDE - A Zia/Viper Graphical Demo");
    Viper.Terminal.Say("===========================================");
    Viper.Terminal.Say("");
    Viper.Terminal.Say("Demonstrating new game development features:");
    Viper.Terminal.Say("  - Viper.Graphics.Canvas (graphical rendering)");
    Viper.Terminal.Say("  - Viper.Game.Grid2D (2D tile storage)");
    Viper.Terminal.Say("  - Viper.Game.Timer (frame-based timers)");
    Viper.Terminal.Say("  - Viper.Game.SmoothValue (animated counters)");
    Viper.Terminal.Say("");
    Viper.Terminal.Say("Controls:");
    Viper.Terminal.Say("  Arrow Keys / WASD - Move");
    Viper.Terminal.Say("  SPACE             - Fire");
    Viper.Terminal.Say("  ENTER             - Start");
    Viper.Terminal.Say("  ESC               - Quit");
    Viper.Terminal.Say("  P                 - Pause");
    Viper.Terminal.Say("");
    Viper.Terminal.Say("Loading...");

    var theGame = new game.Game();

    Viper.Terminal.Say("Starting game!");
    theGame.run();

    Viper.Terminal.Say("");
    Viper.Terminal.Say("Thanks for playing!");
}

