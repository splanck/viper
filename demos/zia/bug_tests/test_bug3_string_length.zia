// Bug #3 Test: String.Length property syntax
// This tests that str.Length and str.length work as property syntax
module main;

bind Viper.Terminal;

func main() {
    var greeting = "Hello, World!";

    // Test .Length property (capital L)
    var len1 = greeting.Length;
    Print("Length of '");
    Print(greeting);
    Print("' is: ");
    PrintInt(len1);
    Say("");

    // Test .length property (lowercase l)
    var len2 = greeting.length;
    Print("Using .length: ");
    PrintInt(len2);
    Say("");

    // Test with empty string
    var empty = "";
    var emptyLen = empty.Length;
    Print("Empty string length: ");
    PrintInt(emptyLen);
    Say("");

    // Verify both methods return same value
    if len1 == len2 {
        Say("SUCCESS: Both .Length and .length return same value");
    } else {
        Say("FAIL: Length values don't match!");
    }

    // Test inline usage in condition
    if greeting.Length > 0 {
        Say("SUCCESS: Inline .Length in condition works");
    }

    Say("");
    Say("Bug #3 Test PASSED!");
}
