// Bug #5 Test: else-if chain code generation with String return
// This tests that else-if chains correctly return String values
// Previously this would fail with "ret value type mismatch: expected str but got i64"
module main;

bind Viper.Terminal;

// Function with else-if chain returning String
func getColorName(code: String) -> String {
    if code == "R" {
        return "Red";
    } else if code == "G" {
        return "Green";
    } else if code == "B" {
        return "Blue";
    } else if code == "Y" {
        return "Yellow";
    } else if code == "O" {
        return "Orange";
    } else if code == "P" {
        return "Purple";
    } else {
        return "Unknown";
    }
}

// Function with deeply nested else-if chain
func getDayName(num: Integer) -> String {
    if num == 1 {
        return "Monday";
    } else if num == 2 {
        return "Tuesday";
    } else if num == 3 {
        return "Wednesday";
    } else if num == 4 {
        return "Thursday";
    } else if num == 5 {
        return "Friday";
    } else if num == 6 {
        return "Saturday";
    } else if num == 7 {
        return "Sunday";
    } else {
        return "Invalid day";
    }
}

// Function that may not hit any return in branches (tests implicit return)
func maybeReturn(value: Integer) -> String {
    if value > 100 {
        return "Large";
    } else if value > 50 {
        return "Medium";
    } else if value > 0 {
        return "Small";
    }
    // Implicit return path for value <= 0
    // Bug #5 fix ensures this returns "" (empty string) not 0 (integer)
}

func main() {
    Say("Testing Bug #5: else-if chain with String return");
    Say("================================================");
    Say("");

    // Test color function
    Print("Color R: ");
    Say(getColorName("R"));

    Print("Color G: ");
    Say(getColorName("G"));

    Print("Color B: ");
    Say(getColorName("B"));

    Print("Color X: ");
    Say(getColorName("X"));

    Say("");

    // Test day function
    Print("Day 1: ");
    Say(getDayName(1));

    Print("Day 5: ");
    Say(getDayName(5));

    Print("Day 7: ");
    Say(getDayName(7));

    Print("Day 99: ");
    Say(getDayName(99));

    Say("");

    // Test implicit return path
    Print("maybeReturn(150): ");
    Say(maybeReturn(150));

    Print("maybeReturn(75): ");
    Say(maybeReturn(75));

    Print("maybeReturn(25): ");
    Say(maybeReturn(25));

    Print("maybeReturn(-5): '");
    Print(maybeReturn(-5));
    Say("' (should be empty)");

    Say("");
    Say("Bug #5 Test PASSED!");
}
