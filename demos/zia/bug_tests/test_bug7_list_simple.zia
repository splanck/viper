// Bug #7 Simple Test: List[String] type and methods work
// This tests that List supports .count() and .get() method syntax
module main;

bind Viper.Terminal;

func main() {
    Say("Testing Bug #7 (Simple): List[String] methods");
    Say("==============================================");
    Say("");

    // Create a simple list
    var items: List[String] = [];
    items.add("Apple");
    items.add("Banana");
    items.add("Cherry");

    // Test .count() method - Bug #7 ensures this works with typed lists
    var count = items.count();
    Print("List count: ");
    PrintInt(count);
    Say("");

    // Test .get() method
    Say("Items:");
    var i = 0;
    while i < count {
        String item = items.get(i);
        Print("  ");
        PrintInt(i);
        Print(": ");
        Say(item);
        i = i + 1;
    }

    Say("");
    if count == 3 {
        Say("SUCCESS: List methods work correctly!");
    } else {
        Say("FAIL: Expected 3 items");
    }

    Say("");
    Say("Bug #7 Simple Test PASSED!");
}
