module DateTimeDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.Time.DateTime Demo ===");
    var now = Viper.Time.DateTime.Now();
    SayInt(Viper.Time.DateTime.Year(now));
    SayInt(Viper.Time.DateTime.Month(now));
    SayInt(Viper.Time.DateTime.Day(now));
    var ts = Viper.Time.DateTime.Create(2025, 6, 15, 10, 30, 0);
    Say(Viper.Time.DateTime.ToISO(ts));
    Say(Viper.Time.DateTime.Format(ts, "YYYY-MM-DD"));
    Say("done");
}
