module PerlinDemo;
bind Viper.Terminal;

func start() {
    Say("=== Viper.Math.PerlinNoise Demo ===");
    var pn = new Viper.Math.PerlinNoise(42);
    SayNum(pn.Noise2D(1.0, 1.0));
    SayNum(pn.Noise3D(1.0, 1.0, 1.0));
    SayNum(pn.Octave2D(1.0, 1.0, 4, 0.5));
    SayNum(pn.Octave3D(1.0, 1.0, 1.0, 4, 0.5));
    Say("done");
}
