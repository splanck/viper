module StringDemo;
bind Viper.String;
bind Viper.Terminal;

func start() {
    Say("=== Viper.String Demo ===");

    Say("--- Case (via bind) ---");
    Say(ToUpper("hello"));
    Say(ToLower("HELLO"));

    Say("--- Case (fully qualified) ---");
    Say(Viper.String.Capitalize("hello world"));
    Say(Viper.String.Title("hello world"));
    Say(Viper.String.CamelCase("hello world"));
    Say(Viper.String.PascalCase("hello world"));
    Say(Viper.String.SnakeCase("helloWorld"));
    Say(Viper.String.KebabCase("helloWorld"));
    Say(Viper.String.ScreamingSnake("helloWorld"));

    Say("--- Search ---");
    SayInt(IndexOf("abcde", "cd"));
    SayInt(Viper.String.LastIndexOf("abcabc", "bc"));
    SayBool(Has("hello", "ell"));
    SayBool(StartsWith("hello", "hel"));
    SayBool(EndsWith("hello", "llo"));
    SayInt(Count("banana", "an"));

    Say("--- Transform ---");
    Say(Flip("hello"));
    Say(Trim("  hello  "));
    Say(Viper.String.TrimStart("  hello  "));
    Say(Viper.String.TrimEnd("  hello  "));
    Say(PadLeft("42", 5, "0"));
    Say(PadRight("hi", 5, "."));
    Say(Repeat("ab", 3));
    Say(Replace("hello world", "world", "viper"));
    Say(Viper.String.RemovePrefix("hello", "hel"));
    Say(Viper.String.RemoveSuffix("hello", "llo"));
    Say(Viper.String.Slug("Hello World!"));

    Say("--- Info ---");
    SayBool(Viper.String.Equals("abc", "abc"));
    SayBool(Viper.String.Equals("abc", "ABC"));
    SayInt(Cmp("abc", "def"));
    SayInt(CmpNoCase("ABC", "abc"));

    Say("--- Distance ---");
    SayInt(Viper.String.Levenshtein("kitten", "sitting"));
    SayInt(Viper.String.Hamming("karolin", "kathrin"));

    Say("done");
}
