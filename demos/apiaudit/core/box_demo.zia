module BoxDemo;
bind Viper.Terminal;

func start() {
    Say("=== Viper.Core.Box Demo ===");

    var bi = Viper.Core.Box.I64(42);
    var bf = Viper.Core.Box.F64(3.14);
    var bb = Viper.Core.Box.I1(1);
    var bs = Viper.Core.Box.Str("hello");

    SayInt(Viper.Core.Box.ToI64(bi));
    SayNum(Viper.Core.Box.ToF64(bf));
    SayInt(Viper.Core.Box.ToI1(bb));
    Say(Viper.Core.Box.ToStr(bs));

    SayInt(Viper.Core.Box.Type(bi));
    SayInt(Viper.Core.Box.Type(bf));
    SayInt(Viper.Core.Box.Type(bb));
    SayInt(Viper.Core.Box.Type(bs));

    SayBool(Viper.Core.Box.EqI64(bi, 42));
    SayBool(Viper.Core.Box.EqI64(bi, 99));
    SayBool(Viper.Core.Box.EqF64(bf, 3.14));
    SayBool(Viper.Core.Box.EqStr(bs, "hello"));
    SayBool(Viper.Core.Box.EqStr(bs, "world"));

    Say("done");
}
