module EnvDemo;
bind Viper.Environment;
bind Viper.Terminal;

func start() {
    Say("=== Viper.Environment Demo ===");
    SayBool(IsNative());
    SayInt(GetArgumentCount());
    Say(GetCommandLine());

    SetVariable("VIPER_TEST_VAR", "hello123");
    SayBool(HasVariable("VIPER_TEST_VAR"));
    Say(GetVariable("VIPER_TEST_VAR"));
    SayBool(HasVariable("NONEXISTENT_VAR_XYZ"));
    Say(GetVariable("NONEXISTENT_VAR_XYZ"));

    Say("done");
}
