module RetryPolicyDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.Network.RetryPolicy Demo ===");
    var r = new Viper.Network.RetryPolicy(3, 100);
    SayInt(r.MaxRetries);
    SayInt(r.Attempt);
    SayBool(r.CanRetry);
    SayBool(r.IsExhausted);
    SayInt(r.TotalAttempts);
    SayInt(r.NextDelay());
    r.Reset();
    SayInt(r.Attempt);
    Say("done");
}
