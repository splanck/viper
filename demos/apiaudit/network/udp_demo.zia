module UdpDemo;
bind Viper.Terminal;

func start() {
    Say("=== API Audit: Viper.Network.Udp ===");
    Say("NOTE: UDP requires socket binding. API surface test only.");
    Say("Constructor: New(), Bind(port), BindAt(address,port)");
    Say("Properties: Port() -> i64, Address() -> str, IsBound() -> bool");
    Say("Send: SendTo(host,port,bytes) -> i64, SendToStr(host,port,str) -> i64");
    Say("Recv: Recv(maxBytes) -> bytes, RecvFrom(maxBytes) -> bytes, RecvFor(maxBytes,timeoutMs) -> bytes");
    Say("Sender info: SenderHost() -> str, SenderPort() -> i64");
    Say("Config: SetBroadcast(enabled), JoinGroup(group), LeaveGroup(group), SetRecvTimeout(ms)");
    Say("Lifecycle: Close()");
    Say("=== Udp Audit Complete (API surface only) ===");
}
