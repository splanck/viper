module VersionDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.Text.Version Demo ===");
    var v = new Viper.Text.Version("1.2.3-beta+build42");
    SayInt(v.Major);
    SayInt(v.Minor);
    SayInt(v.Patch);
    Say(v.Prerelease);
    Say(v.Build);
    Say(v.ToString());
    Say(v.BumpPatch());
    SayBool(Viper.Text.Version.IsValid("1.0.0"));
    SayBool(Viper.Text.Version.IsValid("bad"));
    Say("done");
}
