module StringBuilderDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.Text.StringBuilder Demo ===");
    var sb = new Viper.Text.StringBuilder();
    sb.Append("Hello");
    sb.Append(" ");
    sb.Append("World");
    SayInt(sb.Length);
    Say(sb.ToString());
    sb.Clear();
    SayInt(sb.Length);
    Say("done");
}
