module ScannerDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.Text.Scanner Demo ===");
    var sc = new Viper.Text.Scanner("hello 123 world");
    SayInt(sc.Len);
    SayInt(sc.Pos);
    Say(sc.ReadIdent());
    SayInt(sc.SkipWhitespace());
    Say(sc.ReadInt());
    SayInt(sc.Remaining);
    SayBool(sc.IsEnd);
    sc.Reset();
    SayInt(sc.Pos);
    Say("done");
}
