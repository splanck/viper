module TemplateDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.Text.Template Demo ===");
    var m = new Viper.Collections.Map();
    m.Set("name", "viper"); m.Set("ver", "1.0");
    Say(Viper.Text.Template.Render("Hello {{name}} v{{ver}}", m));
    SayBool(Viper.Text.Template.Has("Hello {{name}}", "name"));
    SayBool(Viper.Text.Template.Has("Hello {{name}}", "age"));
    Say(Viper.Text.Template.Escape("a {{b}} c"));
    Say("done");
}
