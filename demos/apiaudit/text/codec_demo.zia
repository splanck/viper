module CodecDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.Text.Codec Demo ===");
    Say(Viper.Text.Codec.Base64Enc("Hello"));
    Say(Viper.Text.Codec.Base64Dec("SGVsbG8="));
    Say(Viper.Text.Codec.HexEnc("Hi"));
    Say(Viper.Text.Codec.HexDec("4869"));
    Say(Viper.Text.Codec.UrlEncode("hello world"));
    Say(Viper.Text.Codec.UrlDecode("hello%20world"));
    Say("done");
}
