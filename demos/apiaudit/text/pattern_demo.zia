module PatternDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.Text.Pattern Demo ===");
    SayBool(Viper.Text.Pattern.IsMatch("hello123", "[a-z]+[0-9]+"));
    Say(Viper.Text.Pattern.Find("abc123def", "[0-9]+"));
    SayInt(Viper.Text.Pattern.FindPos("abc123def", "[0-9]+"));
    Say(Viper.Text.Pattern.Replace("hello world", "[aeiou]", "*"));
    Say(Viper.Text.Pattern.ReplaceFirst("hello world", "[aeiou]", "*"));
    Say(Viper.Text.Pattern.Escape("a.b+c"));
    Say("done");
}
