module PluralizeDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.Text.Pluralize Demo ===");
    Say(Viper.Text.Pluralize.Plural("cat"));
    Say(Viper.Text.Pluralize.Plural("child"));
    Say(Viper.Text.Pluralize.Singular("cats"));
    Say(Viper.Text.Pluralize.Count(3, "item"));
    Say(Viper.Text.Pluralize.Count(1, "item"));
    Say("done");
}
