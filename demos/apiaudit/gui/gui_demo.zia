    Say("SetDark(), SetLight()");
    Say("--- Layout ---");
    Say("VBox.New(), HBox.New(), SetSpacing(s), SetPadding(p)");
    Say("--- Clipboard ---");
    Say("SetText(s), GetText(), HasText(), Clear()");
    Say("--- Shortcuts ---");
    Say("Register(id,keys,desc), Unregister(id), Clear(), IsEnabled(id), SetEnabled(id,v), GetGlobalEnabled, SetGlobalEnabled(v), WasTriggered(id), GetTriggered");
    Say("--- Cursor ---");
    Say("Set(type), Reset(), SetVisible(v)");
