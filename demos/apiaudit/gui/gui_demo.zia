    Say("Widget.SetDraggable(v), SetDragData(type,data), IsBeingDragged, SetDropTarget(v), SetAcceptedDropTypes(types), IsDragOver, WasDropped, GetDropType, GetDropData");
    Say("");
    Say("=== GUI Audit Complete (API surface only) ===");
}
