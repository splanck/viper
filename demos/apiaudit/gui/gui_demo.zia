    Say("New(parent), AddItem(s), RemoveItem(idx), Clear(), SetSelected(idx), Selected, SelectedText, SetPlaceholder(s)");
    Say("--- Slider ---");
    Say("New(parent,vertical), SetValue(v), Value, SetRange(min,max), SetStep(s)");
    Say("--- ProgressBar ---");
    Say("New(parent), SetValue(v), Value");
    Say("--- ListBox ---");
    Say("New(parent), AddItem(s), RemoveItem(item), Clear(), Select(item), Selected, Count, SelectedIndex, SelectIndex(idx), WasSelectionChanged");
    Say("--- RadioGroup / RadioButton ---");
    Say("RadioGroup.New(), RadioButton.New(parent,text,group), IsSelected, SetSelected(v)");
