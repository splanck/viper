    Say("MenuBar.New(parent), AddMenu(name); Menu.AddItem(name), AddSeparator(), AddSubmenu(name)");
    Say("MenuItem.SetText(s), SetEnabled(v), IsEnabled, SetChecked(v), IsChecked, SetShortcut(s), WasClicked");
