    Say("New(parent), SetValue(v), Value, SetRange(min,max), SetStep(s), SetDecimals(n)");
    Say("--- Image ---");
    Say("New(parent), SetPixels(px,w,h), Clear(), SetScaleMode(m), SetOpacity(o)");
