    Say("");
    Say("--- App ---");
    Say("New(title,w,h), Destroy(), ShouldClose, Poll(), Render(), Root, SetFont(font,size)");
    Say("--- Font ---");
    Say("Load(path), Destroy()");
    Say("--- Widget (base) ---");
    Say("Destroy(), SetVisible(v), SetEnabled(e), SetSize(w,h), SetFlex(f), AddChild(w), IsHovered, IsPressed, IsFocused, WasClicked, SetPosition(x,y)");
    Say("--- Label ---");
    Say("New(parent,text), SetText(s), SetFont(f,sz), SetColor(c)");
    Say("--- Button ---");
    Say("New(parent,text), SetText(s), SetFont(f,sz), SetStyle(s), WasClicked");
    Say("--- TextInput ---");
    Say("New(parent), SetText(s), Text, SetPlaceholder(s), SetFont(f,sz)");
    Say("--- Checkbox ---");
    Say("New(parent,text), SetChecked(v), IsChecked, SetText(s)");
    Say("--- ScrollView ---");
    Say("New(parent), SetScroll(x,y), SetContentSize(w,h)");
    Say("--- TreeView ---");
    Say("New(parent), AddNode(parent,text), RemoveNode(n), Clear(), Expand(n), Collapse(n), Select(n), SetFont(f,sz), GetSelected, WasSelectionChanged");
    Say("--- TabBar ---");
    Say("New(parent), AddTab(title,closable), RemoveTab(t), SetActive(t), GetActive, GetActiveIndex, WasChanged, TabCount, WasCloseClicked, GetCloseClickedIndex");
    Say("--- SplitPane ---");
    Say("New(parent,vertical), SetPosition(ratio), First, Second");
