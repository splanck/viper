// =============================================================================
// API Audit: Viper.Graphics.Color
// =============================================================================
// Tests: RGB, RGBA, FromHSL, GetR, GetG, GetB, GetA, GetH, GetS, GetL,
//        Lerp, Brighten, Darken, FromHex, ToHex, Saturate, Desaturate,
//        Complement, Grayscale, Invert
// =============================================================================

module ColorDemo;
bind Viper.Graphics.Color as Color;
bind Viper.Terminal;
bind Viper.Fmt as Fmt;

func start() {
    Say("=== API Audit: Viper.Graphics.Color ===");

    // --- RGB ---
    Say("--- RGB ---");
    var red = Color.RGB(255, 0, 0);
    Say("RGB(255, 0, 0): " + Fmt.Int(red));
    var green = Color.RGB(0, 255, 0);
    Say("RGB(0, 255, 0): " + Fmt.Int(green));
    var blue = Color.RGB(0, 0, 255);
    Say("RGB(0, 0, 255): " + Fmt.Int(blue));
    var white = Color.RGB(255, 255, 255);
    Say("RGB(255, 255, 255): " + Fmt.Int(white));
    var black = Color.RGB(0, 0, 0);
    Say("RGB(0, 0, 0): " + Fmt.Int(black));

    // --- RGBA ---
    Say("--- RGBA ---");
    var semiRed = Color.RGBA(255, 0, 0, 128);
    Say("RGBA(255, 0, 0, 128): " + Fmt.Int(semiRed));
    var opaqueBlue = Color.RGBA(0, 0, 255, 255);
    Say("RGBA(0, 0, 255, 255): " + Fmt.Int(opaqueBlue));
    var transparent = Color.RGBA(0, 0, 0, 0);
    Say("RGBA(0, 0, 0, 0): " + Fmt.Int(transparent));

    // --- GetR ---
    Say("--- GetR ---");
    Say("GetR(red): " + Fmt.Int(Color.GetR(red)));
    Say("GetR(green): " + Fmt.Int(Color.GetR(green)));
    Say("GetR(white): " + Fmt.Int(Color.GetR(white)));

    // --- GetG ---
    Say("--- GetG ---");
    Say("GetG(red): " + Fmt.Int(Color.GetG(red)));
    Say("GetG(green): " + Fmt.Int(Color.GetG(green)));
    Say("GetG(white): " + Fmt.Int(Color.GetG(white)));

    // --- GetB ---
    Say("--- GetB ---");
    Say("GetB(red): " + Fmt.Int(Color.GetB(red)));
    Say("GetB(blue): " + Fmt.Int(Color.GetB(blue)));
    Say("GetB(white): " + Fmt.Int(Color.GetB(white)));

    // --- GetA ---
    Say("--- GetA ---");
    Say("GetA(semiRed): " + Fmt.Int(Color.GetA(semiRed)));
    Say("GetA(opaqueBlue): " + Fmt.Int(Color.GetA(opaqueBlue)));
    Say("GetA(transparent): " + Fmt.Int(Color.GetA(transparent)));

    // --- FromHSL ---
    Say("--- FromHSL ---");
    var hslRed = Color.FromHSL(0, 100, 50);
    Say("FromHSL(0, 100, 50): " + Fmt.Int(hslRed));
    var hslGreen = Color.FromHSL(120, 100, 50);
    Say("FromHSL(120, 100, 50): " + Fmt.Int(hslGreen));
    var hslBlue = Color.FromHSL(240, 100, 50);
    Say("FromHSL(240, 100, 50): " + Fmt.Int(hslBlue));
    var hslWhite = Color.FromHSL(0, 0, 100);
    Say("FromHSL(0, 0, 100): " + Fmt.Int(hslWhite));
    var hslBlack = Color.FromHSL(0, 0, 0);
    Say("FromHSL(0, 0, 0): " + Fmt.Int(hslBlack));

    // --- GetH ---
    Say("--- GetH ---");
    Say("GetH(red): " + Fmt.Int(Color.GetH(red)));
    Say("GetH(green): " + Fmt.Int(Color.GetH(green)));
    Say("GetH(blue): " + Fmt.Int(Color.GetH(blue)));

    // --- GetS ---
    Say("--- GetS ---");
    Say("GetS(red): " + Fmt.Int(Color.GetS(red)));
    Say("GetS(white): " + Fmt.Int(Color.GetS(white)));

    // --- GetL ---
    Say("--- GetL ---");
    Say("GetL(red): " + Fmt.Int(Color.GetL(red)));
    Say("GetL(white): " + Fmt.Int(Color.GetL(white)));
    Say("GetL(black): " + Fmt.Int(Color.GetL(black)));

    // --- Lerp ---
    Say("--- Lerp ---");
    var lerp0 = Color.Lerp(red, blue, 0);
    Say("Lerp(red, blue, 0): " + Fmt.Int(lerp0));
    var lerp50 = Color.Lerp(red, blue, 50);
    Say("Lerp(red, blue, 50): " + Fmt.Int(lerp50));
    var lerp100 = Color.Lerp(red, blue, 100);
    Say("Lerp(red, blue, 100): " + Fmt.Int(lerp100));
    Say("Lerp R at 50%: " + Fmt.Int(Color.GetR(lerp50)));
    Say("Lerp B at 50%: " + Fmt.Int(Color.GetB(lerp50)));

    // --- Brighten ---
    Say("--- Brighten ---");
    var brightRed = Color.Brighten(red, 30);
    Say("Brighten(red, 30): " + Fmt.Int(brightRed));
    var brightBlue = Color.Brighten(blue, 50);
    Say("Brighten(blue, 50): " + Fmt.Int(brightBlue));

    // --- Darken ---
    Say("--- Darken ---");
    var darkRed = Color.Darken(red, 30);
    Say("Darken(red, 30): " + Fmt.Int(darkRed));
    var darkWhite = Color.Darken(white, 50);
    Say("Darken(white, 50): " + Fmt.Int(darkWhite));

    // --- FromHex ---
    Say("--- FromHex ---");
    var hexRed = Color.FromHex("#FF0000");
    Say("FromHex(#FF0000): " + Fmt.Int(hexRed));
    var hexGreen = Color.FromHex("#00FF00");
    Say("FromHex(#00FF00): " + Fmt.Int(hexGreen));
    var hexBlue = Color.FromHex("#0000FF");
    Say("FromHex(#0000FF): " + Fmt.Int(hexBlue));

    // --- ToHex ---
    Say("--- ToHex ---");
    Say("ToHex(red): " + Color.ToHex(red));
    Say("ToHex(green): " + Color.ToHex(green));
    Say("ToHex(blue): " + Color.ToHex(blue));

    // --- Saturate ---
    Say("--- Saturate ---");
    var muted = Color.RGB(128, 100, 100);
    var saturated = Color.Saturate(muted, 50);
    Say("Saturate(muted, 50): " + Fmt.Int(saturated));

    // --- Desaturate ---
    Say("--- Desaturate ---");
    var desaturated = Color.Desaturate(red, 50);
    Say("Desaturate(red, 50): " + Fmt.Int(desaturated));
    var fullDesat = Color.Desaturate(red, 100);
    Say("Desaturate(red, 100): " + Fmt.Int(fullDesat));

    // --- Complement ---
    Say("--- Complement ---");
    var compRed = Color.Complement(red);
    Say("Complement(red): " + Fmt.Int(compRed));
    Say("Complement R: " + Fmt.Int(Color.GetR(compRed)));
    Say("Complement G: " + Fmt.Int(Color.GetG(compRed)));
    Say("Complement B: " + Fmt.Int(Color.GetB(compRed)));

    // --- Grayscale ---
    Say("--- Grayscale ---");
    var grayRed = Color.Grayscale(red);
    Say("Grayscale(red): " + Fmt.Int(grayRed));
    var grayGreen = Color.Grayscale(green);
    Say("Grayscale(green): " + Fmt.Int(grayGreen));
    var grayWhite = Color.Grayscale(white);
    Say("Grayscale(white): " + Fmt.Int(grayWhite));

    // --- Invert ---
    Say("--- Invert ---");
    var invRed = Color.Invert(red);
    Say("Invert(red): " + Fmt.Int(invRed));
    Say("Invert R: " + Fmt.Int(Color.GetR(invRed)));
    Say("Invert G: " + Fmt.Int(Color.GetG(invRed)));
    Say("Invert B: " + Fmt.Int(Color.GetB(invRed)));
    var invBlack = Color.Invert(black);
    Say("Invert(black): " + Fmt.Int(invBlack));
    var invWhite = Color.Invert(white);
    Say("Invert(white): " + Fmt.Int(invWhite));

    Say("=== Color Audit Complete ===");
}
