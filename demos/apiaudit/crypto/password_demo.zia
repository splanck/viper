module PasswordDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.Crypto.Password Demo ===");
    var h = Viper.Crypto.Password.Hash("secret");
    SayBool(Viper.String.Len(h) > 0);
    SayBool(Viper.Crypto.Password.Verify("secret", h));
    SayBool(Viper.Crypto.Password.Verify("wrong", h));
    Say("done");
}
