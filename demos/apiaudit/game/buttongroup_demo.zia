module ButtonGroupDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.Game.ButtonGroup Demo ===");
    var bg = new Viper.Game.ButtonGroup();
    SayBool(bg.Add(0));
    SayBool(bg.Add(1));
    SayBool(bg.Add(2));
    SayInt(bg.Count);
    SayBool(bg.Select(1));
    SayInt(bg.Selected);
    SayBool(bg.HasSelection);
    SayBool(bg.IsSelected(1));
    SayBool(bg.Has(2));
    bg.ClearSelection();
    SayBool(bg.HasSelection);
    Say("done");
}
