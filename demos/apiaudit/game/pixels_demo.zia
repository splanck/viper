module PixelsDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.Graphics.Pixels Demo ===");
    var px = new Viper.Graphics.Pixels(10, 10);
    SayInt(px.Width);
    SayInt(px.Height);
    px.Set(5, 5, 16711680);
    SayInt(px.Get(5, 5));
    px.Fill(255);
    SayInt(px.Get(0, 0));
    px.Clear();
    SayInt(px.Get(0, 0));
    Say("done");
}
