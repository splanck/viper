module PathFollowerDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.Game.PathFollower Demo ===");
    var pf = new Viper.Game.PathFollower();
    SayInt(pf.PointCount);
    SayBool(pf.AddPoint(0, 0));
    SayBool(pf.AddPoint(100, 0));
    SayBool(pf.AddPoint(100, 100));
    SayInt(pf.PointCount);
    SayInt(pf.Speed);
    SayBool(pf.IsActive);
    pf.Clear();
    SayInt(pf.PointCount);
    Say("done");
}
