module StateMachineDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.Game.StateMachine Demo ===");
    var sm = new Viper.Game.StateMachine();
    SayBool(sm.AddState(0));
    SayBool(sm.AddState(1));
    SayBool(sm.AddState(2));
    SayInt(sm.StateCount);
    SayBool(sm.SetInitial(0));
    SayInt(sm.Current);
    SayBool(sm.Transition(1));
    SayInt(sm.Current);
    SayInt(sm.Previous);
    SayBool(sm.HasState(2));
    Say("done");
}
