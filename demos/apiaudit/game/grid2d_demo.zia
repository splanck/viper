module Grid2DDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.Game.Grid2D Demo ===");
    var g = new Viper.Game.Grid2D(5, 5, 0);
    SayInt(g.Width);
    SayInt(g.Height);
    SayInt(g.Size);
    g.Set(2, 3, 42);
    SayInt(g.Get(2, 3));
    SayBool(g.InBounds(4, 4));
    SayBool(g.InBounds(5, 5));
    g.Fill(7);
    SayInt(g.Count(7));
    g.Clear();
    SayInt(g.Get(2, 3));
    Say("done");
}
