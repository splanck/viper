module ArchiveDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.IO.Archive Demo ===");
    var arc = Viper.IO.Archive.Create("/tmp/viper_test.zip");
    arc.AddStr("hello.txt", "Hello World");
    arc.Finish();
    var arc2 = Viper.IO.Archive.Open("/tmp/viper_test.zip");
    SayInt(arc2.Count);
    SayBool(arc2.Has("hello.txt"));
    Say(arc2.ReadStr("hello.txt"));
    Say("done");
}
