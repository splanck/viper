module BinFileDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.IO.BinFile Demo ===");
    var bf = new Viper.IO.BinFile("/tmp/viper_binfile_test.bin", "w");
    bf.WriteByte(65);
    bf.WriteByte(66);
    bf.Flush();
    bf.Close();
    var bf2 = new Viper.IO.BinFile("/tmp/viper_binfile_test.bin", "r");
    SayInt(bf2.Size);
    SayInt(bf2.ReadByte());
    SayInt(bf2.ReadByte());
    SayBool(bf2.Eof);
    bf2.Close();
    Say("done");
}
