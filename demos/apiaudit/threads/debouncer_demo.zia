module DebouncerDemo;
bind Viper.Terminal;
func start() {
    Say("=== Viper.Threads.Debouncer Demo ===");
    var d = new Viper.Threads.Debouncer(100);
    SayInt(d.Delay);
    SayBool(d.IsReady);
    SayInt(d.SignalCount);
    d.Signal();
    SayInt(d.SignalCount);
    d.Reset();
    SayInt(d.SignalCount);
    Say("done");
}
